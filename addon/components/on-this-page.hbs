{{#if @toc}}
  <div class="on-this-page-wrapper">
    <div class="on-this-page-wrapper-header">On this page</div>
    <hr>
    <ul>
      {{#each @toc as |toc|}}
        <li>
          <a href="#{{this.headerPrefix}}{{toc.id}}">{{toc.text}}</a>
        </li>
      {{/each}}
    </ul>
    {{yield}}
  </div>
{{/if}}