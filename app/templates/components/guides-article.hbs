{{! template-lint-disable no-link-to-positional-params link-rel-noopener no-curly-component-invocation no-implicit-this }}
{{#if (not (eq this.version this.currentVersion))}}
  <div class="old-version-warning">
    <div class="old-version-warning-text">
      <img src="/images/exclamation-circle-solid.svg" alt="warning icon" class="warning-icon" />
      <div><strong>Old Guides - </strong>You are viewing the guides for Ember {{this.version}}.</div>
    </div>

    {{#link-to "version.show" "release" this.path class="es-button-secondary"}} VIEW {{this.currentVersion}} {{/link-to}}
  </div>
{{/if}}

{{#if this.guidemaker.sourceRepo}}
  <a
    href="{{this.guidemaker.sourceRepo}}/edit/master/guides/{{this.editVersion}}{{this.model.id}}.md"
    target="_blank"
    class="edit-page icon-pencil"
    rel="noopener"
  >
    Edit Page
  </a>
{{/if}}

<h1>
  {{this.page.currentPage.title}}
</h1>
<hr>

{{markdown-to-html this.model.content extensions="showdown-section-groups"}}

{{chapter-links pages=this.pages}}
